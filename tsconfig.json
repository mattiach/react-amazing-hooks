{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "lib": ["dom", "es2015", "ES2017"],
    "allowJs": true,
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
